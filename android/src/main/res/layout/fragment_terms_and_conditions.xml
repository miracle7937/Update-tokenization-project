<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/fragment_terms_and_conditions_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/fragment_terms_and_conditions_button_accept"
            android:text="@string/fragment_terms_and_conditions_button_accept"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:height="55dp"
        android:layout_marginBottom="10dp"
            android:background="@drawable/zenith_button_style"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_terms_and_conditions_button_decline"
            android:text="@string/fragment_terms_and_conditions_button_decline"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:height="55dp"
                android:textColor="@color/zenith_color"
            android:background="@drawable/zenith_button_style_with_border"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>